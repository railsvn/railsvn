!!! html
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= page_title
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)
  %body
    #header
      .wrapper
        %h1#logo
          = link_to 'RailsVN', root_url
        .navigation-wrapper
          = render 'layouts/top_navigation'
    #site
      .wrapper
        #main
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"
          -#= content_tag :h2, yield(:title) if show_title?
          = yield
        #side
    #footer
      .wrapper
        .powered
          %p Thanks to
          %ul
            %li
              = link_to 'http://rubyonrails.org/', :title => 'Ruby on rails' do
                = image_tag 'rails.png'
            %li
              = link_to 'http://heroku.com/', :title => 'Heroku' do
                = image_tag 'heroku.png'
    = render :partial => 'layouts/google_analytics'
